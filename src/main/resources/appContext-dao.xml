       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="txManager" class="com.netcracker.crm.dao.impl.TransactionManagerImpl" scope="singleton"/>

    <bean id="userDao" class="com.netcracker.crm.dao.impl.UserDaoImplCalls" scope="singleton">
        <property name="dataSource" ref="txManager"/>
    </bean>

</beans>